<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Fragment1" android:id="@+id/ConstraintLayout">
    <Button
            android:text="@string/button_shuffle"
            android:layout_height="0dp" android:id="@+id/button_shuffle"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_hide" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_clockwise" android:layout_width="0dp"/>
    <Button
            android:text="@string/button_clockwise"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button_clockwise"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_restore"
            app:layout_constraintStart_toEndOf="@+id/button_shuffle" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="@string/button_hide"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button_hide"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_shuffle" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_restore"/>
    <Button
            android:text="@string/button_restore"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button_restore"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_clockwise"
            app:layout_constraintStart_toEndOf="@+id/button_hide" app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
